# ============================================
# Gateway Configuration
# ============================================

# Public port where the whole application is available
GATEWAY_PORT=2030

# Public base path for Annotator UI
ANNOTATOR_BASE_PATH=/annotator

# Backend API context path (must match backend config)
ANNOTATOR_SERVER_CONTEXT_PATH=/annotator-server/api

# Public base path for MediaCMS via gateway
MEDIA_CMS_BASE_PATH=/mediacms

# ============================================
# Annotator Configuration
# ============================================

# Base path where the Annotator UI is served.
# http://localhost:<ANNOTATOR_HOST_PORT>/<ANNOTATOR_BASE_PATH>
ANNOTATOR_BASE_PATH=/annotator


# Public API endpoint for managing annotations of a specific media asset.
ANNOTATIONS_API_URL=http://localhost:2030/annotator-server/api/annotation/media

# Public API endpoint for fetching a single media asset.
MEDIA_ASSET_API_URL=http://localhost:2030/annotator-server/api/asset

# Public API endpoint for retrieving media assets from a playlist.
MEDIA_ASSETS_LIST_API_URL=http://localhost:2030/annotator-server/api/asset/adapter/playlist

# ============================================
# Annotator Server Configuration
# ============================================

# Internal port used by Annotator Server container
ANNOTATOR_SERVER_PORT=5040

# Internal MediaCMS URL (Docker network hostname)
MEDIA_CMS_INTERNAL_BASE_URL=http://web

# Public MediaCMS URL (used when returning media URLs to browser)
MEDIA_CMS_PUBLIC_BASE_URL=http://localhost:2080

# MediaCMS API base path
MEDIA_CMS_API_BASE=/api/v1

# GraphDB repository URL (internal Docker hostname)
GDB_REPOSITORY_URL=http://graphdb:7200/repositories/media-assets

# GraphDB credentials for Annotator Server driver
GDB_USERNAME=admin
GDB_PASSWORD=root

# Allowed frontend origins for CORS (comma-separated)
ANNOTATOR_SERVER_CORS_ORIGINS=http://localhost:2030


# ============================================
# MediaCMS Configuration
# ============================================

# Public port exposing MediaCMS
MEDIA_CMS_HOST_PORT=2080

# MediaCMS public frontend host
MEDIA_CMS_FRONTEND_HOST=http://localhost

# PostgreSQL credentials for MediaCMS
MEDIA_CMS_DB_USER=mediacms
MEDIA_CMS_DB_PASSWORD=mediacms
MEDIA_CMS_DB_NAME=mediacms

# MediaCMS admin account (created on first run)
MEDIA_CMS_ADMIN_USER=admin
MEDIA_CMS_ADMIN_PASSWORD=admin
MEDIA_CMS_ADMIN_EMAIL=admin@mediacms.com
