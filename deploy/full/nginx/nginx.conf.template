server {
  listen 80;
  server_name _;

  location ^~ ${MEDIA_CMS_REDIRECT_PATH} {
         return 302 http://localhost:${MEDIA_CMS_HOST_PORT};
  }

  # Annotator UI
  location ${ANNOTATOR_BASE_PATH}/ {
    proxy_pass http://media-asset-annotator/;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }

  location /health {
    return 200;
  }
}
